<h1><%=@user.username%>'s profile!</h1>

<% @tweets.each do |t| %>
  <p><a href="/users/<%=t.user.slug%>"><%=t.user.username%></a></p>
  <p><%=t.content%></p>
  <% if t.user == current_user %>
    <a href="/tweets/<%=t.id%>/edit">Edit Tweet</a><a href="/tweets/<%=t.id%>/delete"><button>Delete Tweet</button></a>
  <% end %>
<% end %>
