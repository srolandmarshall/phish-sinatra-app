<h1>Add a show review to your profile</h1>

<h3>Enter a year</h3>
<form method="post" action="/addshow">
  <select name="year">
    <% @years.each do |y| %>
      <option value="<%=y.to_s%>"><%=y.to_s%></option>
    <% end %>
  </select>
  <input type="submit" value="Search"></form>


<% if @shows %>
<h3>Select a show</h3>

<form method="post" action="/users/<%=@user.id%>">
  <select name="show">
    <% @shows.each do |s| %>
      <option name="<%=s.id%>" value="<%=s.date_string%>"><%=s.date_string + ' - ' + s.city%></option>
    <% end %>
  </select>
  <P>Review: <textarea name="review" cols="45" rows="5" placeholder="Your Review Here..." ></textarea></p>
  <input type="submit" value="Add Review"></form>
<%end%>
